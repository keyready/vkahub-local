client_max_body_size 3M;

server {
    listen 80;
    server_name ithub.61kaf2021.vka;

    location /db-admin {
        proxy_pass http://localhost:5001;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location / {
        root /home/rasp/vkahub-local/client-files/;
        try_files $uri $uri/ /index.html;
    }

    location /ws {
        proxy_pass http://localhost:5000/ws;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location ~ ^/api/ {
        proxy_pass http://localhost:5000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /certificates {
        alias /home/rasp/vkahub-local/server/backend/certificates/;
        try_files $uri $uri/ =404;
    }

    location /reports {
        alias /home/rasp/vkahub-local/server/backend/reports/;
        try_files $uri $uri/ =404;
    }

    location /user-avatars {
        alias /home/rasp/vkahub-local/server/backend/user-avatars/;
        try_files $uri $uri/ =404;
    }

    location /team-images {
        alias /home/rasp/vkahub-local/server/backend/team-images/;
        try_files $uri $uri/ =404;
    } 
}